{
  "name": "mern-portfolio-builder",
  "version": "1.0.0",
  "description": "MERN Stack Portfolio Builder",
  "main": "backend/server.js",
  "scripts": {
    "heroku-postbuild": "cd frontend && npm install && npm run build && cd ../backend && npm install",
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start"
  },
  "engines": {
    "node": "20.10.0",
    "npm": "10.9.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.5",
    "express-rate-limit": "^6.11.0",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["mern", "portfolio", "builder", "react", "node", "express", "mongodb"],
  "author": "",
  "license": "MIT"
}